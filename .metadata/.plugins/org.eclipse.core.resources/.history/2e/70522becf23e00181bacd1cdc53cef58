	public static void main(String[]args){
		int arr[]={1,533,23,4545,2,3434,23,432,21,66};
		for(int temp:arr){
			System.out.print(temp+" ");
		}
//		for(int i=0;i<10;i++){
//			for(int j=0;j>i;j++){
//				
//			}
//		}
		//arr[0]与max置换
		int temp=0;
		int index=0;
		for(int j=0;j<10;j++){
			if(arr[j]<arr[j+1]){
				index=j+1;
			}else{
				index=j;
			}
		}
		temp=arr[0];
		arr[0]=arr[index];
		arr[index]=temp;
		for(int temp:arr){
			System.out.print(temp+" ");
		}
	}
}
