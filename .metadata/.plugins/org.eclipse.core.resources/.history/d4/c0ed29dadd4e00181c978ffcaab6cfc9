package com.aowin;

public interface Department {
	void selfAction();//做本部门的事情
	void outAction();//向总经理申请
}

//定义研发部门
class Development implements Department{
	private Mediator m;
	
	public Development(Mediator m) {
		super();
		this.m = m;
	}

	@Override
	public void selfAction() {
		System.out.println("汇报工作，申请资金");		
	}

	@Override
	public void outAction() {

		System.out.println("研发部，专心科研，开发项目");
	}
	
}

//定义财务部
class Finacial implements Department{
	private Mediator m;
	
	public Finacial(Mediator m) {
		super();
		this.m = m;
	}

	@Override
	public void selfAction() {
		System.out.println("汇报工作，发钱");		
	}

	@Override
	public void outAction() {

		System.out.println("自己的工作--数钱");
	}
	
}
//定义财务部
class MarKet implements Department{
	private Mediator m;
	
	public MarKet(Mediator m) {
		super();
		this.m = m;
	}

	@Override
	public void selfAction() {
		System.out.println("汇报工作，发钱");		
	}

	@Override
	public void outAction() {

		System.out.println("自己的工作--数钱");
	}
	
}