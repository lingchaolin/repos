class BaseOne {
	private boolean flag=true;
	public synchronized void Subject(int i) {
			try {
				while(!flag) {
					this.wait();
				}
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			for(int j=0;j<10;j++) {
				System.out.println(Thread.currentThread().getName()+":"+j);
			}
			this.notify();
	}
	public void main(String[] args) {
		try {
			while(flag) {
				this.wait();
			}
		} catch (InterruptedException e) {
			e.printStackTrace();
		}
		for(int j=0;j<10;j++) {
			System.out.println(Thread.currentThread().getName()+":"+j);
		}
		flag=true;
		this.notify();
	}
}
