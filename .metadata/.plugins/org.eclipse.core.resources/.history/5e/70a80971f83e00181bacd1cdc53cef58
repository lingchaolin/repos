			int temp=0;
			int index=0;
			for(int j=i;j<10;j++){//j=0 1 2 3……
				if(arr[index]<arr[j]){
					index=j;
				}
			}
			temp=arr[i];
			arr[i]=arr[index];
			arr[index]=temp;
		}
		
		
		
