	/**
	 * 文件夹及其子文件的copy
	 * @param src
	 * @param dest
	 */
	public static void FileCopy(File src,File dest){
		if(src.isFile()){
			ioCopy(src,dest);
		}else{
			dest.mkdir();
			for(File file:src.listFiles()){
				FileCopy(file,new File(dest,file.getName()));
			}
			
		}
	}
	/**
	 * ioCopy--文件的拷贝
	 * @param src
	 * @param dest
	 */
	public static void ioCopy(File src,File dest){
		InputStream  is=null;
		OutputStream  os=null;
		try {
			is=new FileInputStream(src);
			os=new FileOutputStream(dest,true);
			
			byte car[]=new byte[1024];
			int len=0;
			
			
			while(-1!=(len=is.read(car))){
				os.write(car, 0, len);
			}
			os.flush();
		} catch (IOException e) {
		}finally{
			try {
				os.close();
				is.close();
			} catch (IOException e) {
			}
		}
	}
	/**
	 * 文件的写入
	 * @param dest
	 */
	public static void ioWrite(File dest){
		OutputStream os=null;
		try {
			os=new FileOutputStream(dest);
			String str="哈哈嘿嘿嘿 \r\n";
			byte data[]=str.getBytes();
			os.write(data, 0, data.length);//将char[]数组转换为字符串，写入；
			os.flush();
		} catch (IOException e) {
			e.printStackTrace();
		}finally{
			try {
				os.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		
	}
	/**
	 * 文件的读取
	 * @param src
	 */
	public static void ioRead(File src){
		InputStream  is=null;
		try {
			is=new FileInputStream(src);
			byte car[]=new byte[1024];
			int len=0;
			StringBuilder sb=new StringBuilder();
			while(-1!=(len=is.read(car))){
				String info=new String(car,0,len);
				sb.append(info);
			}
			System.out.println(sb.toString());
		} catch (IOException e) {
		}finally{
			try {
				is.close();
			} catch (IOException e) {
			}
		}
	}
	/**
	 * 文件的写入--字符流
	 * @param dest
	 */
	public static void charWrite(File dest){
		Writer os=null;
		try {
			os=new FileWriter(dest);
			String str="哈哈嘿嘿嘿 哼哼\r\n";
			os.write(str);//字符流
			os.flush();
		} catch (IOException e) {
			e.printStackTrace();
		}finally{
			try {
				os.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
	}
	/**
	 * 文件的读取--字符流
	 * @param dest
	 */
	public static void charRead(File src){
		
	}
}
