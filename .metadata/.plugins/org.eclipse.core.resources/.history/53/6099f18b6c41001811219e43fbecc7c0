//		ioWrite(dest);
//		ioCopy(src,dest);
		String path3="D:/Class/work/Test";
		File src3=new File(path3);
//		ioRead(src);
		String path4="D:/Class/Target/Test";
		File dest4=new File(path4);
//		FileCopy(src3,dest4);
		charWrite(dest);
		
