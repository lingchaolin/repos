package forIO;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
/**
 * 读取".txt"异常。但读取".java"文件没问题
 * @author Administrator
 *
 */
public class BaseOperate {
	public static void main(String []args) {
		String path="D:/Class/work/Test/IoIN.java";
//		File src=new File(path);
//		ioRead(src);
		String path2="D:/Class/work/Test/IoOUT.java";
		File dest=new File(path2);
		ioWrite(dest);
	}
	public static void ioCopy(File src,File dest){
		InputStream  is=null;
		OutputStream  os=null;
		try {
			is=new FileInputStream(src);
			os=new FileOutputStream(dest);
			
			byte car[]=new byte[1024];
			int len=0;
			
			
			while(-1!=(len=is.read(car))){
				os.write(car, 0, len);
			}
			os.flush();
		} catch (IOException e) {
		}finally{
			try {
				os.close();
				is.close();
			} catch (IOException e) {
			}
		}
	}
	public static void ioWrite(File dest){
		OutputStream os=null;
		try {
			os=new FileOutputStream(dest);
			String str="哈哈嘿嘿嘿 \r\n";
			byte data[]=str.getBytes();
			os.write(data, 0, data.length);//将char[]数组转换为字符串，写入；
			os.flush();
		} catch (IOException e) {
			e.printStackTrace();
		}finally{
			try {
				os.close();
			} catch (IOException e) {
				e.printStackTrace();
			}
		}
		
	}
	public static void ioRead(File src){
		InputStream  is=null;
		try {
			is=new FileInputStream(src);
			byte car[]=new byte[1024];
			int len=0;
			StringBuilder sb=new StringBuilder();
			while(-1!=(len=is.read(car))){
				String info=new String(car,0,len);
				sb.append(info);
			}
			System.out.println(sb.toString());
		} catch (IOException e) {
		}finally{
			try {
				is.close();
			} catch (IOException e) {
			}
		}
	}
}
