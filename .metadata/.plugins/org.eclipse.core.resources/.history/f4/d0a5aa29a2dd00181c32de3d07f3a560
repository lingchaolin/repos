package com.aowin.review;

import java.lang.reflect.Constructor;
import java.lang.reflect.Method;

public class Student {
	private String name="123";
	public Student() {
		System.out.println("无参构造器");
	}
	public Student(int num,String str) {
		System.out.println("构造器 int:"+num+"str:"+str);
	}
	public void method(String str) {
		System.out.println("调用method方法");
	}
	public static void main(String[] args) {
		try {
			Class class1=Class.forName("com.aowin.review.Student");
			Constructor[] constructor=class1.getConstructors();
			System.out.println(constructor[0]);
			
			Constructor constructor2=class1.getConstructor(int.class,String.class);
			System.out.println(constructor2);
			Student student=(Student) constructor2.newInstance(12,"str");
			Method method=class1.getMethod("method", String.class);
			method.invoke(student, "234");
		} catch (Exception e) {
			e.printStackTrace();
		} 
	}

}
