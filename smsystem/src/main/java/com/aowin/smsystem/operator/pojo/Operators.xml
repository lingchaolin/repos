<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
		"-//mybatis.org//DTD Mapper 3.4//EN"
		"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aowin.smsystem.operator.pojo.Operators">
	<!-- 添加操作员 -->
	<insert id="insertOperator" parameterType="Operators">
		insert into operators (operatorname,operatorsex,username,userpwd,isadmin)
		value(#{operatorname},#{operatorsex},#{username},#{userpwd},#{isadmin})
	</insert>
	<!-- 显示所有操作员 -->
	<select id="getOperators" resultType="Operators">
		select operatorid,operatorname,operatorsex,username,userpwd,isadmin
		from operators
		order by operatorid desc
	</select>
	<!-- 获取所有操作员记录数-->
	<select id="gettotalrecords" resultType="int">
		select count(operatorid) 
		from operators
	</select>
	<!-- 根据编号获取操作员信息 --><!--根据给定条件查询操作员的信息  -->
	<select id="getOperatorsById" parameterType="Operators" resultType="Operators">
		select operatorid,operatorname,operatorsex,username,userpwd,isadmin
		from operators
		where operatorid=#{operatorid}
	</select>
	<!-- 修改操作员 -->
	<update id="updateOperators" parameterType="Operators">
		update operators set operatorname=#{operatorname},
		operatorsex=#{operatorsex},username=#{username},
		userpwd=#{userpwd},isadmin=#{isadmin}
		where operatorid=#{operatorid}
	</update>
	<!-- 根据编号删除操作员 -->
	<delete id="deleteOperator" parameterType="int">
		delete from operators where operatorid=#{operatorid}
	</delete>
	<!-- 批量删除操作员 -->
	<delete id="deleteOperators">
		delete from operators 
		where operatorid in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</delete>
	<!-- 系统登录验证 -->
	<select id="getoperatorbyusernameandpwd" parameterType="Operators" resultType="Operators">
		select operatorid,operatorname,operatorsex,username,userpwd,isadmin
		from operators
		where userpwd=#{userpwd} and username=#{username}
	</select>
</mapper>